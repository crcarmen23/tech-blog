<h2 class="title is-size-2 has-text-centered" id="profile-greeting">Hi, {{first_name}}!</h2>

<div class="columns is-variable is-6 m-5">
  <div class="column">
    <h3 class="title is-3 has-text-centered">Create a New Post</h3>

    <form class="box" id="create-post-form">
      <div class="field">
        <label class="label">Title</label>
        <div class="control">
          <input class="input" type="text" id="post-title"/>
        </div>
      </div>
      <div class="field">
        <label class="label">Description</label>
        <div class="control">
          <input class="input" type="text" id="post-description"/>
        </div>
      </div>
      <div class="field">
        <label class="label">Image URL</label>
        <div class="control">
          <input class="input" type="text" id="post-picture">
        </div>
      </div>
      <div class="field">
        <div class="control">
          <button id="upload_widget" class="button is-link is-light">Upload a File</button>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <button class="button is-dark" type="submit">Create</button>
        </div>
      </div>
    </form>
    </div>

    <div class="column post-list">
      <h3 class="title is-3 has-text-centered">My Posts</h3>
    
      {{#if posts.length}}
      {{#each posts as |post|}}
      <div class="container card mb-2">
        <div class="card-content has-text-centered">
          <div class="buttons is-right">
            <button class="delete" data-id="{{post.id}}"></button>
          </div>
          <div class="media-center">
            <div class="media-center">
              <figure class="container image is-inline-block" id="post-image">
                <img src="{{post.picture}}" alt="{{post.title}}">
              </figure>
            </div>
      
          </div>
          <br>
          <div class="media-content">
            <p class="title is-4">{{post.title}}</p>
          </div>
          <div class="content is-size-5">
            {{post.description}}
            <br>
            <br>
            <a class="button is-danger is-light" href="/post/{{post.id}}">View Post/Add Comment</a>
            <br>
          </div>
        </div>
      </div>
      {{/each}}
      {{/if}}
    </div>
  </div> 
</div>
<br>
<br>

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="./js/profile.js"></script>